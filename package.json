{
    "name": "eslint-config-brad",
    "version": "1.3.0",
    "private": true,
    "description": "Brad's ESlint config",
    "repository": "https://github.com/brad/eslint-config-brad.git",
    "author": "Brad Zacher <brad.zacher@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "@typescript-eslint/parser": "^1.6.0",
        "eslint": "^5.16.0",
        "eslint-plugin-dependencies": "^2.4.0",
        "eslint-plugin-eslint-comments": "^3.1.1",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jest": "^22.4.1",
        "eslint-plugin-react": "^7.12.4",
        "eslint-restricted-globals": "^0.2.0"
    },
    "devDependencies": {
        "@types/eslint": "^4.16.6",
        "@types/node": "^11.13.4",
        "eslint-find-rules": "^3.3.1",
        "eslint-import-resolver-node": "^0.3.2",
        "husky": "^1.3.1",
        "patch-package": "^6.1.2",
        "prettier-eslint-cli": "^4.7.1",
        "rimraf": "^2.6.3",
        "ts-node": "^8.0.3",
        "typescript": "^3.4.3"
    },
    "scripts": {
        "build": "make build",
        "ci": "make ci",
        "clean": "rimraf -g ./dist/",
        "lint-no-cache": "eslint ./src ./scripts ./types --ext .ts,.js",
        "lint": "yarn lint-no-cache --cache",
        "format-no-write": "prettier src/**/*.ts scripts/**/*.ts types/*.d.ts --config=.prettierrc",
        "format": "yarn format-no-write --write && yarn lint-no-cache --fix",
        "format-check": "yarn format-no-write --list-different",
        "postinstall": "yarn patch-package",
        "precommit": "yarn format-check && yarn lint && git diff --exit-code && yarn typecheck",
        "prepush": "make ci",
        "regenerate-types": "make regenerate-types",
        "typecheck": "tsc -p ./tsconfig.json --noEmit"
    },
    "resolutions": {
        "typescript-eslint-parser": "^22.0.0",
        "eslint": "^5.16.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn precommit",
            "pre-push": "yarn prepush"
        }
    }
}
